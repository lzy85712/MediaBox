<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg">


    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_head_bg"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:background="@mipmap/mine_test">

                <FrameLayout
                    android:id="@+id/fl_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/iv_back_oval" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/iv_back" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="32dp"
                    android:text="@string/personalmall"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/share"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="110dp"
                    android:text="Robert Palmer"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="110dp"
                    android:background="@drawable/corner_view_white_bord_5radio"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="已关注"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_personal_desc"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_below="@+id/tv_username"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Classical homeopathy is generally defined as a system of medical treatment"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_lv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_personal_desc"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/corner_view_gray_5radio"
                    android:paddingBottom="2dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:text="lv1"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_personal_desc"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:src="@mipmap/star_mine" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_personal_desc"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="18dp"
                    android:src="@mipmap/crown" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_middle_indicator"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/corner_view_white_5radio"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="240dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_indicator_one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_number_indicator_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:text="73"
                        android:textColor="#4a4d6f"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_indicator_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:text="@string/yuanchuangfaxing"
                        android:textColor="#4a4d6f"
                        android:textSize="10dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_indicator_two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_number_indicator_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:text="321"
                        android:textColor="#a1a3b5"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_indicator_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:text="@string/buy_prod"
                        android:textColor="#a1a3b5"
                        android:textSize="10dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_indicator_three"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_number_indicator_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:text="23"
                        android:textColor="#a1a3b5"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_indicator_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:text="@string/friend"
                        android:textColor="#a1a3b5"
                        android:textSize="10dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_indicator_four"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/tv_number_indicator_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:text="999+"
                        android:textColor="#a1a3b5"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_indicator_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:text="@string/dynamic"
                        android:textColor="#a1a3b5"
                        android:textSize="10dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_indicator_five"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_number_indicator_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:text="184"
                        android:textColor="#a1a3b5"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_indicator_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:text="@string/liulanguode"
                        android:textColor="#a1a3b5"
                        android:textSize="10dp" />
                </RelativeLayout>

            </LinearLayout>

            <com.mediabox.qukuailian.view.ViewPagerForScrollView
                android:id="@+id/vp_persional_mall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_middle_indicator"
                android:layout_marginTop="15dp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
